<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/settingscreen"
    tools:context=".SettingsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/backButton"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/backarrow"
            android:contentDescription="Back arrow"
            app:backgroundTint="@null" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="20dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView11"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    app:srcCompat="@drawable/player1" />

                <ImageView
                    android:id="@+id/ironman1Button"
                    android:layout_width="120dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/ironman" />

                <ImageView
                    android:id="@+id/cap1Button"
                    android:layout_width="120dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/cap" />

                <ImageView
                    android:id="@+id/thor1Button"
                    android:layout_width="120dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/thor" />

                <ImageView
                    android:id="@+id/widow1Button"
                    android:layout_width="120dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/widow" />

                <ImageView
                    android:id="@+id/hulk1Button"
                    android:layout_width="120dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/hulk" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView12"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    app:srcCompat="@drawable/player2" />

                <ImageView
                    android:id="@+id/ironman2Button"
                    android:layout_width="120dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/ironman" />

                <ImageView
                    android:id="@+id/cap2Button"
                    android:layout_width="120dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/cap" />

                <ImageView
                    android:id="@+id/thor2Button"
                    android:layout_width="120dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/thor" />

                <ImageView
                    android:id="@+id/widow2Button"
                    android:layout_width="120dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/widow" />

                <ImageView
                    android:id="@+id/hulk2Button"
                    android:layout_width="120dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/hulk" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>